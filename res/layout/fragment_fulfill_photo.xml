<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fulfill_photo_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".gui.TaskFulfillFragment" >

    <!-- Take a photo button -->

    <Button
        android:id="@+id/button_take_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/task_take_photo" />

    <!-- Display attached photos -->

    <TextView
        android:id="@+id/text_attached_photos"
        style="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="@string/task_attached_photos" />

    <Gallery
        android:id="@+id/gallery_fulfill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>